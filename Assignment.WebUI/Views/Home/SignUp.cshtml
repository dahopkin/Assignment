@model Assignment.Domain.Entities.Customer

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Styles.css" type="text/css" rel="stylesheet" />
    <title>Sign up for Insurance</title>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Insurance</h4></div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    <label>First Name:</label>
                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control"})
                </div>
                <div class="form-group">
                    <label>Last Name:</label>
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Birth Date:</label>
                    @Html.TextBoxFor(x => x.BirthDate, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Email Address:</label>
                    @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Number of Dependents:</label>
                    @Html.TextBoxFor(x => x.NumberOfDependents, new { @class = "form-control" })
                    <p class="help-block">Must be between 1 and 50</p>
                </div>
                <div class="text-center">
                    <input class ="btn btn-success" type="submit" value="Sign Up" />
                </div>
            }
        </div>


    </div>
</body>
</html>
