@model Assignment.Domain.Entities.Customer

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
   
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Styles.css" type="text/css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script type="text/javascript" src="~/scripts/moment.min.js"></script>
    <script type="text/javascript" src="~/scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/scripts/bootstrap-datetimepicker.js"></script>
    <link rel="stylesheet" href="~/Content/bootstrap-datetimepicker.css" />
    <title>Sign up for Insurance</title>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Insurance</h4></div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                <div class="form-group row">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                        <label>First Name:</label>
                        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                        @Html.ValidationMessage("FirstName")
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                        <label>Last Name:</label>
                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                        @Html.ValidationMessage("LastName")
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                        @*<label>Birth Date:</label>
                        @Html.TextBoxFor(x => x.BirthDate, new { @class = "form-control" })
                        @Html.ValidationMessage("BirthDate")*@
                        @Html.LabelFor(x => x.BirthDate, "Birth Date:")
                        <div class="input-group">
                            @Html.TextBoxFor(x => x.BirthDate, new { @class = "form-control datepicker" })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                            @Html.ValidationMessageFor(x => x.BirthDate)
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-9 col-md-6 col-lg-6">
                        <label>Email Address:</label>
                        @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control" })
                        @Html.ValidationMessage("EmailAddress")
                    </div>
                    <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                        <label>Number of Dependents:</label>
                        @Html.TextBoxFor(x => x.NumberOfDependents, new { @class = "form-control" })
                        <p class="help-block">Must be between 1 and 50</p>
                        @Html.ValidationMessage("NumberOfDependents")
                    </div>
                </div>
                <div class="text-center">
                    <input class ="btn btn-success" type="submit" value="Sign Up" />
                </div>
            }
        </div>


    </div>
    <script type="text/javascript">
    $(function () { // will trigger when the document is ready
        $('.datepicker').datetimepicker({format:"MM/DD/YYYY"}); //Initialise any date pickers
    });
    </script>
</body>
</html>
